<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1280"
             d:DesignHeight="720"
             x:Class="SimulateurDuRamasseurCompulsif.userControl.donneesPersonnage">
    
    <Grid Background="#2A2A2A">
        
        <StackPanel>
            <Button HorizontalAlignment="Left" HorizontalContentAlignment="Center" 
                    CornerRadius="20" Padding="30,10" Margin="30 30 0 0" 
                    Background="#CC000000" Foreground="#E9E7CA" FontFamily="{StaticResource Alice}" 
                    FontSize="15" Cursor="Hand" Click="onRetourClick">
                Retour
            </Button>
            <StackPanel VerticalAlignment="Center" Spacing="50" Margin="0 0 0 40">
            
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="32" FontFamily="{StaticResource Alice}" Foreground="#E9E7CA">
                    Votre identité
                </TextBlock>
            </StackPanel>
        
            <UniformGrid Rows="1" HorizontalAlignment="Center" Margin="20 0">
                   
                <Border Width="240" Height="380" BorderThickness="1" CornerRadius="30" 
                        Background="#FF000000" BoxShadow="0 10 20 0 #40000000" ClipToBounds="True" Margin="40">
                        
                    <Grid>
                        <Image Source="avares://SimulateurDuRamasseurCompulsif/assets/pictures/mage_v1.png" Stretch="UniformToFill"></Image>
                           
                        <Border VerticalAlignment="Bottom" Height="250"> <!--Retirer les propriétés-->
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                                    <GradientStop Offset="0" Color="#00000000"></GradientStop>
                                    <GradientStop Offset="0.4" Color="#CC000000"></GradientStop>
                                    <GradientStop Offset="1" Color="#FF000000"></GradientStop>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                            
                        <StackPanel VerticalAlignment="Bottom" Margin="15 0 15 70">
                            <TextBlock HorizontalAlignment="Center" TextAlignment="Center" FontFamily="{StaticResource Metamorphous}"
                                       FontSize="27" Foreground="#E9E7CA">
                                Mage
                            </TextBlock>
                                
                            <StackPanel Spacing="15">
                                <TextBlock FontFamily="{StaticResource Alice}" FontSize="12" Foreground="#BBB" TextWrapping="Wrap">
                                    Etre gracieux et agile, maître de l'arc et de la magie naturelle.
                                </TextBlock>
                                    
                                <Border BorderThickness="1" CornerRadius="5" Padding="5" >
                                    <StackPanel>
                                        <TextBlock TextAlignment="Center" Margin="5" FontFamily="{StaticResource Metamorphous}" FontSize="13" Foreground="#E9E7CA" >
                                            Vision Nocturne
                                        </TextBlock>
                                        <TextBlock FontFamily="{StaticResource Alice}" FontSize="12" Foreground="#BBB" TextWrapping="Wrap">
                                            Repère les pièges assez tôt pour ne pas abimer ses cheveux.
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
                    
                <Border Width="240" Height="380" BorderThickness="1" CornerRadius="30" 
                        Background="#E9E7CA" BoxShadow="0 10 20 0 #40000000" ClipToBounds="True">
                        
                    <Grid>
                        
                            
                        <StackPanel VerticalAlignment="Bottom" Margin="15 0 15 70">
                            <TextBlock HorizontalAlignment="Center" TextAlignment="Center" FontFamily="{StaticResource Metamorphous}"
                                       FontSize="27" Foreground="#E9E7CA">
                                
                            </TextBlock>
                            
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="{StaticResource Alice}" FontSize="12">Genre</TextBlock>
                                <StackPanel>
                                    <RadioButton FontFamily="{StaticResource Alice}" FontSize="12">Femme</RadioButton>
                                    <RadioButton FontFamily="{StaticResource Alice}" FontSize="12">Homme</RadioButton>
                                    <RadioButton FontFamily="{StaticResource Alice}" FontSize="12">Troll</RadioButton>
                                </StackPanel>
                            </StackPanel>
                            
                            <TextBox HorizontalAlignment="Center" FontFamily="{StaticResource Alice}" Name="inputNomJoueur" 
                                     Width= "200" Watermark="Entrez votre nom..." Margin="0 10 0 10">
                            </TextBox>
                            <StackPanel Spacing="15">
                                <TextBlock FontFamily="{StaticResource Alice}" FontSize="12" Foreground="#BBB" TextWrapping="Wrap">
                                    Minuscule et insaisissable, elle manie la magie ancienne et voltige avec grâce.
                                </TextBlock>
                            </StackPanel>
                                
                            <Border BorderThickness="1" CornerRadius="5" Padding="5" >
                                <StackPanel>
                                    <TextBlock TextAlignment="Center" Margin="5" FontFamily="{StaticResource Metamorphous}" FontSize="13" Foreground="#E9E7CA" >
                                        Providence Ailée
                                    </TextBlock>
                                    <TextBlock FontFamily="{StaticResource Alice}" FontSize="12" Foreground="#BBB" TextWrapping="Wrap">
                                        Améliore le butin trouvé parce qu'elle a des goûts de luxe et peu de patience.
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <Border Width="240" Height="380" BorderThickness="1" CornerRadius="30" 
                        Background="#FF000000" BoxShadow="0 10 20 0 #40000000" ClipToBounds="True">
                        
                    <Grid>
                        <Image Source="avares://SimulateurDuRamasseurCompulsif/assets/pictures/troubadour_v1.png" Stretch="UniformToFill"></Image>
                           
                        <Border VerticalAlignment="Bottom" Height="250"> <!--Retirer les propriétés-->
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                                    <GradientStop Offset="0" Color="#00000000"></GradientStop>
                                    <GradientStop Offset="0.4" Color="#CC000000"></GradientStop>
                                    <GradientStop Offset="1" Color="#FF000000"></GradientStop>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                            
                        <StackPanel VerticalAlignment="Bottom" Margin="15 0 15 70">
                            <TextBlock HorizontalAlignment="Center" TextAlignment="Center" FontFamily="{StaticResource Metamorphous}"
                                       FontSize="27" Foreground="#E9E7CA">
                                Troubadour
                            </TextBlock>
                                
                            <StackPanel Spacing="15">
                                <TextBlock FontFamily="{StaticResource Alice}" FontSize="12" Foreground="#BBB" TextWrapping="Wrap">
                                    Minuscule et insaisissable, elle manie la magie ancienne et voltige avec grâce.
                                </TextBlock>
                            </StackPanel>
                                
                            <Border BorderThickness="1" CornerRadius="5" Padding="5" >
                                <StackPanel>
                                    <TextBlock TextAlignment="Center" Margin="5" FontFamily="{StaticResource Metamorphous}" FontSize="13" Foreground="#E9E7CA" >
                                        Providence Ailée
                                    </TextBlock>
                                    <TextBlock FontFamily="{StaticResource Alice}" FontSize="12" Foreground="#BBB" TextWrapping="Wrap">
                                        Améliore le butin trouvé parce qu'elle a des goûts de luxe et peu de patience.
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </UniformGrid>
            
            
            <StackPanel>
                <Button HorizontalAlignment="Right" HorizontalContentAlignment="Center" 
                        CornerRadius="20" Padding="30,10" Margin="0 30 30 0" 
                        Background="#CC000000" Foreground="#E9E7CA" FontFamily="{StaticResource Alice}" 
                        FontSize="15" Cursor="Hand" Click="onValiderClick">
                    Valider
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
    
</UserControl>
